@model List<ProductViewModel>

<h2 class="text-center mb-4">Products</h2>

@foreach (var animalType in Model.Select(p => p.AnimalType).Distinct())
{
    <h3 class="text-center mb-3">@animalType</h3>
    <div class="row justify-content-center">
        @foreach (var product in Model.Where(p => p.AnimalType == animalType))
        {
            <div class="col-md-4 mb-4">
                <div class="card product-card">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text price">Price: @product.Price</p>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Details", new { id = product.Id })" class="btn btn-primary">View Details</a>
                            <a href="@Url.Action("AddToCart", new { id = product.Id })" class="btn btn-success">Add to Cart</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}