@model CategoryViewModel

<h2>@Model.Name</h2>

<div class="product-cards">
    @foreach (var product in Model.Products)
    {
        <div class="card">
            <img class="card-img-top" src="@Url.Content(product.ImageUrl)" alt="@product.Name" />
            <div class="card-body">
                <h5 class="card-title">@product.Name</h5>
                <p class="card-text">@product.Description</p>
                <p class="card-text">Price: @product.Price</p>
                <div class="card-actions">
                    <a asp-action="Details" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-primary">View Details</a>
                    <form method="post" action="@Url.Action("AddToCart", "Cart")">
                        <input type="hidden" name="productId" value="@product.Id" />
                        <button type="submit" class="btn btn-success">Add to Cart</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>